<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient2"
    tools:context=".Main2Activity">

    <TextView
      android:id="@+id/hasil_nim"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="105dp"
        android:layout_marginLeft="135dp"
        android:textAlignment="center"
        android:text="NIM"
        android:textColor="#000000"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/hasil_nama"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hasil_nim"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="105dp"
        android:textAlignment="center"
        android:text="NAMA"
        android:textColor="#000000"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/hasil_nilai"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/hasil_nama"
        android:layout_alignStart="@+id/hasil_nim"
        android:layout_alignLeft="@id/hasil_nim"
        android:textAlignment="center"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="2dp"
        android:text="NILAI"
        android:textColor="#000000"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/hasil_hitung"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/hasil_nilai"
        android:layout_alignStart="@id/hasil_nilai"
        android:layout_alignLeft="@id/hasil_nilai"
        android:textAlignment="center"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="-2dp"
        android:text="Grade"
        android:textColor="#000000"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/button_kembali"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/hasil_nilai"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="139dp"
        android:text="Back" />

</RelativeLayout>